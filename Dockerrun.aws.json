{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"nlrcmani/multi-client",
            "hostname":"client",
            "essential": false
        },
        {
            "name":"server",
            "image":"nlrcmani/multi-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"nlrcmani/multi-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"nlrcmani/multi-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client","server"]

        }

    ]
}